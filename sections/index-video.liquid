<section class="sip-section">
  <div class="container">
    <div class="sip-header text-center">
      <h2>
        {{ section.settings.heading }}
      </h2>
      <p>
        {{ section.settings.text | newline_to_br }}
      </p>
    </div>
    <div class="sip-content">
      {% if section.settings.video_url != blank and section.settings.image != blank %}
        <img
          loading="lazy"
          src="{{ section.settings.image | image_url : width : section.settings.image.width }}"
          alt="Video background">
        <a href="{{ section.settings.video_url }}" data-fancybox=""><img
            loading="lazy"
            src="{{ 'play-btn.svg' | asset_url }}"
            alt="play icon"></a>
      {% endif %}
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Popup Video",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "textarea",
        "id": "text",
        "label": "Text"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }, {
        "type": "text",
        "id": "video_url",
        "label": "Video URL",
        "info": "Upload the Video in files and paste the url here."
      }
    ],
    "presets": [
      {
        "name": "Popup Video"
      }
    ]
  }
{% endschema %}