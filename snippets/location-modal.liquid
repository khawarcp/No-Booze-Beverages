        <div class="age-wrapper">
          <input
            type="checkbox"
            name="age"
            id="age"
            value="18+">
          <label for="age">I'm 18+ years old</label>
        </div>
        <p id="age-err"></p>
        <div class="modal-footer-wrapper">          
          <button
            id="exit-site"
            type="button"
            class="siteBtn exit-site"
            data-dismiss="modal">Canel</button>
            <button
            type="button"
            id="enter-site"
            class="siteBtn enter-site">Confirm</button>
        </div>
        <div class="modal-footer border-0">
          <p>** This website sells only in US</p>
        </div>
      </div>
