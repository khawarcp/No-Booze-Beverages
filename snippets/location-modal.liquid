
<!-- Modal -->
<link rel="stylesheet" href="{{ 'location-modal.css' | asset_url }}">
<div
  class="modal fade"
  id="location-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" loading="lazy" style="background-image: url('{{ settings.modal_background | image_url : width: settings.modal_background.width }}');">
