{% schema %}
  {
    "name": "Collection Tabbing",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Kranium Products"
      }
    ],
    "blocks": [
      {
        "type": "soda",
        "name": "Soda Collection",
        "settings": [
          {
            "type": "collection",
            "id": "soda_collection",
            "label": "Collection"
          }
        ]
      }, {
        "type": "seltzer",
        "name": "Seltzer Collection",
        "settings": [
          {
            "type": "collection",
            "id": "seltzer_collection",
            "label": "Collection"
          }
        ]
      }, {
        "type": "tea",
        "name": "Tea Collection",
        "settings": [
          {
            "type": "collection",
            "id": "tea_collection",
            "label": "Collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collection Tabbing"
      }
    ]
  }
{% endschema %}