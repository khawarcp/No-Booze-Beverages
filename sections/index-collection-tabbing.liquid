<!-- Kranium Products -->
<section class="products-section">
  <div class="container">
    <div class="kranium-content">
      <h2>
        {{ section.settings.heading }}
      </h2>
      <div class="product-tabs-header appointment-tabs flex space center">
        <nav>
          <div
            class="nav nav-tabs nav-fill"
            id="nav-tab"
            role="tablist">
            <a
              class="nav-item nav-link active show"
              id="soda-tab"
              data-toggle="tab"
              href="#soda">Soda</a>
            <a
              class="nav-item nav-link"
              id="seltzer-tab"
              data-toggle="tab"
              href="#seltzer">Seltzer</a>
            <a
              class="nav-item nav-link"
              id="tea-tab"
              data-toggle="tab"
              href="#tea">Tea</a>
          </div>
        </nav>
      </div>
      <div class="tab-content px-sm-0" id="nav-tabContent">
        <!-- Tab1 -->
        <div
          class="tab-pane fade active show"
          id="soda"
          role="tabpanel"
          aria-labelledby="nav-home-tab">
          <div class="product-tab-wrap">
            <div class="products-inner-tabs">
              <nav>
                <div
                  class="nav nav-tabs nav-fill"
                  id="nav-tab"
                  role="tablist">
                  {% for block in section.blocks %}
                    {% if block.type == 'soda' %}
                      {% assign collection = collections[block.settings.soda_collection] %}
                      <a
                        class="nav-item nav-link {% if forloop.first %} active show {% endif %}"
                        id="{{ collection.title | strip_html | escape | downcase | replace: ' ', '-' }}-tab-{{ block.type }}"
                        data-toggle="tab"
                        href="#{{ collection.title | strip_html | escape | downcase | replace: ' ', '-' }}-{{ block.type }}">{{ collection.title }}</a>
                    {% endif %}
                  {% endfor %}
                </div>
              </nav>
            </div>
            <div class="tab-content px-sm-0" id="nav-tabContent">
              {% for block in section.blocks %}
                {% if block.type == 'soda' %}
                  {% assign collection = collections[block.settings.soda_collection] %}
                  <div
                    class="tab-pane fade {% if forloop.first %} active show {% endif %}"
                    id="{{ collection.title | strip_html | escape | downcase | replace: ' ', '-' }}-{{ block.type }}"
                    role="tabpanel"
                    aria-labelledby="nav-home-tab">
                    {% if collection.products.size == 0 %}
                      <div class="title-wrapper center">
                        <h2 class="title title--primary">
                          {{ 'sections.collection_template.empty' | t }}<br>
                          {{ 'sections.collection_template.use_fewer_filters_html' | t: link: collection.url, class: "underlined-link link" }}
                        </h2>
                      </div>
                    {% else %}
                      <div class="products-slider owl-carousel">
                        <div class="item">
                          <div class="single-product">
                            <img src="assets/images/horchata.png" alt="Horhcata can">
                            <h3>Horchata</h3>
                            <div class="size-price">
                              <span>420 ML</span>
                              <span>$18.45</span>
                            </div>
                            <div class="product-footer">
                              <a href="#">More Info</a>
                              <a href="#" class="addCart">Add To Cart</a>
                            </div>
                          </div>
                        </div>
                        <div class="item">
                          <div class="single-product">
                            <img src="assets/images/horchata.png" alt="Horhcata can">
                            <h3>Watermelon</h3>
                            <div class="size-price">
                              <span>420 ML</span>
                              <span>$18.45</span>
                            </div>
                            <div class="product-footer">
                              <a href="#">More Info</a>
                              <a href="#" class="addCart">Add To Cart</a>
                            </div>
                          </div>
                        </div>
                        <div class="item">
                          <div class="single-product">
                            <img src="assets/images/horchata.png" alt="Horhcata can">
                            <h3>Tropical</h3>
                            <div class="size-price">
                              <span>420 ML</span>
                              <span>$18.45</span>
                            </div>
                            <div class="product-footer">
                              <a href="#">More Info</a>
                              <a href="#" class="addCart">Add To Cart</a>
                            </div>
                          </div>
                        </div>
                        <div class="item">
                          <div class="single-product">
                            <img src="assets/images/horchata.png" alt="Horhcata can">
                            <h3>Tropical</h3>
                            <div class="size-price">
                              <span>420 ML</span>
                              <span>$18.45</span>
                            </div>
                            <div class="product-footer">
                              <a href="#">More Info</a>
                              <a href="#" class="addCart">Add To Cart</a>
                            </div>
                          </div>
                        </div>
                      </div>
                    {% endif %}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
