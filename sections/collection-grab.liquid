<!-- Grab Cans -->
<section class="cans-section">
  <div class="container">
    <div class="cans-content flex jc-sb">
      <div class="cans-image">
        {% render 'responsive-image', image: section.settings.image %}
      </div>
      <div class="cans-copy">
        {% if section.settings.heading != blank %}
          <h3>
            {{ section.settings.heading }}
          </h3>
        {% endif %}
        {% if section.settings.text != blank %}
          <p>
            {{ section.settings.text }}
          </p>
        {% endif %}
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url | default: '#'  }}" class="siteBtn">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Grab Them",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button URL"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ]
  }
{% endschema %}