<form
  action="/"
  id="zipform"
  method="get">
  <input
    placeholder="Enter Zip Code"
    type="text"
    id="zip"
    name="zip"
    pattern="[0-9]+"
    oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');" />
  <button id="zipbtn" type="submit">
    Search
  </button>
</form>

