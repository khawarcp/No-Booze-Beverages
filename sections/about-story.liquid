<!-- Story -->
<section class="story-section space-left">
    <h3> {{ section.settings.heading | newline_to_br }} </h3>
    <div class="story-row flex jc-sb ai-center">
        <div class="story-copy">
            <h4> {{ section.settings.quote }} </h4>
            <span> {{ section.settings.quotee }} </span>
            <p> {{ section.settings.info }} </p>
        </div>
        <div class="story-image">
            {% render 'responsive-image', image: section.settings.image %}
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Story",
        "settings": [
            {
                "type": "textarea",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "inline_richtext",
                "id": "info",
                "label": "Description"
            },
            {
                "type": "textarea",
                "id": "quote",
                "label": "Quote"
            },
            {
                "type": "text",
                "id": "quotee",
                "label": "Quotee"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            }
        ]
    }
{% endschema %}