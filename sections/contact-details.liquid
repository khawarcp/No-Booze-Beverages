<!-- Contact Details -->
<section class="contactPage-section">
    <div class="container">
        <div class="contact-row flex jc-sb">
            <div class="contact-col">
                <div class="contact-image">
                    <img src="assets/images/contact-image.jpg" alt="contact image">
                </div>
            </div>
            <div class="contact-col">
                <h2>How can we <span>help</span> you?</h2>
                <p>Lorem ipsum dolor sit amet consectetur. Id egestas faucibus est urna mauris urna eu.</p>
                <form action="" class="contact-form">
                    <div class="contact-fields">
                        <div class="field">
                            <input type="text" placeholder="First Name">
                        </div>
                        <div class="field">
                            <input type="text" placeholder="Last Name">
                        </div>
                        <div class="field">
                            <input type="email" placeholder="Email Address">
                        </div>
                        <div class="field">
                            <input type="text" placeholder="Phone Number">
                        </div>
                        <div class="field">
                            <textarea name="" id="" cols="30" rows="4" placeholder="Your message"></textarea>
                        </div>
                        <div class="field-btn">
                            <button type="submit">Submit</button>
                        </div>
                    </div>
                </form>
                <div class="contact-social">
                    <h3>Follow Us</h3>
                    <div class="social-linkss">
                        <a href="#" target="_blank"><img src="assets/images/facebook.svg" alt="facebook icon"></a>
                        <a href="#" target="_blank"><img src="assets/images/instagram.svg" alt="instagram icon"></a>
                        <a href="#" target="_blank"><img src="assets/images/tiktok.svg" alt="tiktok icon"></a>
                        <a href="#" target="_blank"><img src="assets/images/pointerest-icon.svg" alt="icon"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Contact Details",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "header",
                "content": "Form"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "subheading",
                "label": "Subheading"
            },
            {
                "type": "header",
                "content": "Social Media"
            },
            {
                "type": "text",
                "id": "social_heading",
                "label": "Heading"
            }
        ]
    }
{% endschema %}