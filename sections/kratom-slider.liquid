<!-- Kratom Slider-->
<section
  class="flavour-section">
  <div
    class="container">
    <div
      class="flavor-row flex">
      <div
        class="flavor-iamge">
        {% render 'responsive-image', image: section.settings.image %}
      </div>
      <div
        class="flavor-details">
        <div
          class="flavorCarousel owl-carousel">
          {% for block in section.blocks %}
            <div
              class="item">
              <div
                class="flavor-item">
                {% if block.settings.heading != blank %}
                  <h4>
                    {{ block.settings.heading }}
                  </h4>
                {% endif %}
                <div
                  class="slider-con">
                  {{ block.settings.text }}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        <div
          class="slider-counter"></div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Slider",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "Slide",
        "name": "Slide",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }, {
            "type": "richtext",
            "id": "text",
            "label": "Text"
          }
        ]
      }
    ]
  }
{% endschema %}