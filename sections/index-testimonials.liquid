<section class="testimonials-section {% if template contains 'product' %} product-testimonials {% endif %}">
  <div class="container">
    <div class="testimonials-content">
      <h2>
        {{ section.settings.heading }}
      </h2>
      <div class="testimonials-slider owl-carousel">
        {% for block in section.blocks %}
          <div class="item">
            <div class="testimonials-single">
              {% if block.settings.image != blank %}
                <img
                  loading="lazy"
                  height=""
                  width="{{ block.settings.image.width }}"
                  src="{{ block.settings.image | image_url : width : block.settings.image.width }}"
                  alt="{{ block.settings.image.alt }}">
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
              {% endif %}
              <p>
                {{ block.settings.comment }}
              </p>
              <span>
                {{ block.settings.name }}
              </span>
            </div>
          </div>
        {% endfor %}
        <div class="slideState"><span></span></div>
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Testimonials",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Fan Favorites"
      }
    ],
    "blocks": [
      {
        "name": "Testimonial",
        "type": "testimonial",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "textarea",
            "id": "comment",
            "label": "comment"
          }, {
            "type": "text",
            "id": "name",
            "label": "Name"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Testimonials"
      }
    ]
  }
{% endschema %}