<!-- Kranium Products -->
<section
  class="products-section flavor-products">
  <div
    class="container">
    <div
      class="kranium-content">
      <div
        class="prodHead flex jc-sb ai-center">
        <h2>
          {{ section.settings.heading }}
        </h2>
        <span>
          <span>Soda</span>
          Seltzer Tea</span>
      </div>
      <div
        class="products-slider owl-carousel">
        {% for product in collection.products %}
          <div
            class="item">
            {% render 'custom-card-product' 
             , card_product: product,
             show_rating: section.settings.show_rating,
             lazy_load: true,
             show_quick_add: section.settings.enable_quick_add,
             section_id: section.id %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Products",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "collection_slider",
        "name": "Collection",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ]
      }
    ]
  }
{% endschema %}