<!-- Shop Banner -->
<section class="shop-banner">
  <div class="container">
    <div class="shop-banner-content flex jc-sb">
      {% if section.settings.heading != blank %}
        <h3>
          {{ section.settings.heading }}
        </h3>
      {% endif %}
      {% if section.settings.info != blank %}
        <p>
          {{ section.settings.info }}
        </p>
      {% endif %}
    </div>
  </div>
  {% if section.settings.image_1 != blank %}
    <img
      loading="lazy"
      height=""
      width="{{ section.settings.image_1.width }}"
      src="{{ section.settings.image_1 | image_url : width: section.settings.image_1.width }}"
      alt="{{ section.settings.image_1.alt }}"
      class="left-image">
  {% endif %}
  {% if section.settings.image_2 != blank %}
    <img
      loading="lazy"
      height=""
      width="{{ section.settings.image_2.width }}"
      src="{{ section.settings.image_2 | image_url : width: section.settings.image_2.width }}"
      alt="{{ section.settings.image_2.alt }}"
      class="right-image">
  {% endif %}
</section>

<!-- Marquee -->
<section class="shop-marquee">
  <div class="marquee-wrap">
    <div class="marquee-content marquee-left">
      <span>
        {{ section.settings.text }}
      </span>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Banner",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "info",
        "label": "Text"
      },
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "Left Image"
      },
      {
        "type": "image_picker",
        "id": "image_2",
        "label": "Right Image"
      }, {
        "type": "header",
        "content": "Marquee Text"
      }, {
        "type": "text",
        "id": "text",
        "label": "Text"
      }
    ]
  }
{% endschema %}