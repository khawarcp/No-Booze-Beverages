        "type": "address",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }, {
            "type": "text",
            "id": "address_text",
            "label": "Address"
          }, {
            "type": "text",
            "id": "phone",
            "label": "Phone Number"
          }, {
            "type": "text",
            "id": "email_address",
            "label": "Email Address"
          }
        ]
      }
    ]
  }
{% endschema %}
