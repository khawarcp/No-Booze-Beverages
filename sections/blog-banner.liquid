<!-- Blog Banner -->
<section class="blog-section">
  <div class="container">
    <div class="flex jc-sb blog-headings">
      <div class="newsCopy">
        <span>ALL THE LATEST NEWS</span>
        <h1>From The Blog</h1>
      </div>
      <div class="blogText">
        <p>Join our family of energy drink lovers and be the first to taste our new releases and attend special events</p>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Banner",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }, {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      }, {
        "type": "inline_richtext",
        "id": "text",
        "label": "Text"
      }
    ]
  }
{% endschema %}